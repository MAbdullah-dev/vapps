generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String             @id @default(uuid())
  name               String?
  email              String?            @unique
  emailVerified      DateTime?
  image              String?
  password           String?
  lastActive         DateTime?          // Track when user was last active
  createdAt          DateTime           @default(now())
  updatedAt          DateTime           @updatedAt
  accounts           Account[]
  ownedOrganizations Organization[]     @relation("OrganizationOwner")
  sessions           Session[]
  organizations      UserOrganization[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  type              String
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Organization {
  id          String               @id @default(uuid())
  name        String
  ownerId     String
  createdAt   DateTime             @default(now())
  database    OrgDatabaseInstance?
  owner       User                 @relation("OrganizationOwner", fields: [ownerId], references: [id])
  users       UserOrganization[]
  invitations Invitation[]
}

model UserOrganization {
  id             String       @id @default(uuid())
  userId         String
  organizationId String
  role           String       @default("member")
  leadershipTier String?      // Top, Operational, Support - derived from role but stored for easier querying
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, organizationId])
  @@index([leadershipTier])
}

model OrgDatabaseInstance {
  id               String       @id @default(uuid())
  organizationId   String       @unique
  dbHost           String
  dbPort           Int
  dbUser           String
  dbPassword       String
  dbName           String
  connectionString String
  organization     Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
}

model Invitation {
  id             String       @id @default(uuid())
  token          String       @unique
  organizationId String
  email          String
  role           String?      // Role for the invitation (owner, admin, manager, member)
  siteId         String?      // Site assignment (for Operational/Support leadership)
  processId      String?      // Process assignment (for Operational/Support leadership)
  status         String       @default("pending") // pending, accepted, expired, cancelled
  expiresAt      DateTime
  createdAt      DateTime     @default(now())
  acceptedAt     DateTime?
  invitedBy      String? // User ID who created the invite
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@index([token])
  @@index([organizationId])
  @@index([email, status])
  @@index([status, expiresAt])
  @@index([role])
  @@map("invitations")
}
